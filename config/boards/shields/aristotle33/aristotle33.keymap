        };
        combo_return2 {
            timeout-ms = <20>;
            key-positions = <18 19>;
            bindings = <&kp ENTER>;
            layers = <0 1 2 3>;
        };
        combo_zero {
            timeout-ms = <20>;
            key-positions = <26 27>;
