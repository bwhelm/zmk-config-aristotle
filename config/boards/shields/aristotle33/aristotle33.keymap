// }}}
// ==================== OTHER SETTINGS ====================== {{{1
// Set options for mod-tap behavior
&mt {
    tapping-term-ms = <180>;
};
// Set options for layer-tap behavior
&lt {
    tapping-term-ms = <250>;
};

// }}}
/ {
// ======================= BEHAVIORS ======================== {{{1
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <180>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            /* retro-tap; */
            bindings = <&kp>, <&kp>;
        };
    };
// }}}
// ========================= COMBOS ========================= {{{1
    combos {
        compatible = "zmk,combos";
        combo_tab {
            timeout-ms = <20>;
            key-positions = <0 1>;
            bindings = <&kp TAB>;
            layers = <0>;
        };
        combo_esc {
            timeout-ms = <20>;
            key-positions = <1 2>;
            bindings = <&kp ESC>;
            layers = <0 1 2>;
        };
        combo_grave {
            timeout-ms = <20>;
            key-positions = <2 3>;
            bindings = <&kp GRAVE>;
            layers = <0>;
        };
        combo_minus {
            timeout-ms = <20>;
            key-positions = <6 7>;
            bindings = <&kp MINUS>;
            layers = <0>;
        };
        combo_equal {
            timeout-ms = <20>;
            key-positions = <7 8>;
            bindings = <&kp EQUAL>;
            layers = <0>;
        };
        combo_bs {
            timeout-ms = <20>;
            key-positions = <8 9>;
            bindings = <&kp BACKSPACE>;
            layers = <0 1>;
        };
        combo_dquote {
            timeout-ms = <20>;
            key-positions = <1 11>;
            bindings = <&kp DOUBLE_QUOTES>;
            layers = <0>;
        };
        combo_dquote2 {
            timeout-ms = <20>;
            key-positions = <10 11>;
            bindings = <&kp DOUBLE_QUOTES>;
            layers = <0>;
        };
        combo_question {
            timeout-ms = <20>;
            key-positions = <11 12>;
            bindings = <&kp QUESTION>;
            layers = <0>;
        };
        combo_lparen {
            timeout-ms = <20>;
            key-positions = <12 13>;
            bindings = <&kp LPAR>;
            layers = <0>;
        };
        combo_lbracket {
            timeout-ms = <20>;
            key-positions = <13 14>;
            bindings = <&kp LEFT_BRACKET>;
            layers = <0>;
        };
        combo_rbracket {
            timeout-ms = <20>;
            key-positions = <15 16>;
            bindings = <&kp RIGHT_BRACKET>;
            layers = <0>;
        };
        combo_rparen {
            timeout-ms = <20>;
            key-positions = <16 17>;
            bindings = <&kp RPAR>;
            layers = <0>;
        };
        combo_slash {
            timeout-ms = <20>;
            key-positions = <17 18>;
            bindings = <&kp SLASH>;
            layers = <0>;
        };
        combo_return {
            timeout-ms = <20>;
            key-positions = <8 18>;
            bindings = <&kp ENTER>;
